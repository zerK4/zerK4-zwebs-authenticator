// ? Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db"
}

// * User model ------------------------------------------------------------------
model User {
  id                Int          @id @default(autoincrement())
  username          String
  email             String
  token             String
  confirmed         Boolean      @default(false)
  confirmationToken String
  technology        Technology[]
  profile           Profile?

  @@unique([confirmationToken])
}

// * User profile model -------------------------------------------------------------
model Profile {
  userId      Int     @unique
  user        User    @relation(fields: [userId], references: [id])
  firstName   String?
  lastName    String?
  avatar      String?
  jobPosition String?
  phoneNumber String?

  // followers UserFollower[]
}

// * Technology model ----------------------------------------------------------
model Technology {
  id       Int     @id @default(autoincrement())
  techUser User    @relation(fields: [userId], references: [id])
  userId   Int
  name     String
  icon     String?
}
